<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-6 offset-3">
    <div class="new-stay-form">
        <h3 style="text-align: center;"><b>Edit your Stay</b></h3><br>
        <form class="needs-validation" novalidate method="post" action="/listings/<%=listing._id%>?_method=put">
            <div class="mb-3">
                <label for="title" class="form-label"> Title: </label>
            <input required name="listing[title]" class="form-control" id="title" value="<%= listing.title %>" type="text">
            <div class="invalid-feedback">Please enter a Title</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label"> Description: </label><br>
                <textarea required name="listing[description]" class="form-control" id="description" rows="10" cols="50"><%= listing.description %></textarea>
                <div class="invalid-feedback">Please enter a Description</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label"> Image Link: </label>
                <input required name="listing[image]" class="form-control" id="image" value="<%= listing.image %>" type="text">
                <div class="invalid-feedback">Please insert an Image</div>
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label"> Price: </label>
                <input required name="listing[price]" class="form-control" id="price" value="<%= listing.price %>" type="number">
                <div class="invalid-feedback">Please enter a Valid Price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="location" class="form-label">Location: </label>
                <input required name="listing[location]" class="form-control" id="location" value="<%= listing.location %>" type="text">
                <div class="invalid-feedback">Please enter a Location</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="country" class="form-label"> Country: </label>
            <input required name="listing[country]" class="form-control" id="country" value="<%= listing.country %>" type="text">
            <div class="invalid-feedback">Please enter a Country</div>
            </div>
            <br>
            <button class="btn btn-dark">Edit</button>
        </form>
    </div>
    </div>
</div>
