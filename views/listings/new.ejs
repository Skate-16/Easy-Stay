<% layout("/layouts/boilerplate") -%>
<div class="row">
    <div class="col-8 offset-2">
    <div class="new-stay-form mt-5 mb-3">
        <h3 style="text-align: center;"><b>Create a New Stay</b></h3><br>
        <form method="post" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label"> Title: </label>
                <input name="listing[title]" class="form-control" id="title" placeholder="Enter your title" type="text" required>
                <div class="invalid-feedback">Please enter a Title</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label"> Description: </label><br>
                <textarea name="listing[description]" class="form-control" id="description" placeholder="Enter your description" rows="5" cols="50" required></textarea>
                <div class="invalid-feedback">Please enter a Description</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label"> Upload Image: </label>
                <input name="listing[image]" class="form-control" id="image" type="file" required>
                <div class="invalid-feedback">Please enter an Image</div>
            </div>
            <div class="mb-3">
                <label for="category" class="form-label"> Choose your Stay Filter: </label>
                <select name="listing[category]" id="category" class="form-select" aria-label="Default select example" required>
                    <option disabled selected value="">Choose your Stay Filter</option>
                    <option value="Farms">Farms</option>
                    <option value="Rooms">Rooms</option>
                    <option value="Beach Fronts">Beach Fronts</option>
                    <option value="Mansions">Mansions</option>
                    <option value="Arctic">Arctic</option>
                    <option value="Tropical">Tropical</option>
                    <option value="Mountains">Mountains</option>
                </select>
                <div class="invalid-feedback">Please choose your stay filter</div>
            </div>
            
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="price" class="form-label"> Price: </label>
                    <input name="listing[price]" class="form-control" id="price" placeholder="Enter your price" type="number" required>
                    <div class="invalid-feedback">Please enter a Valid Price</div>
                </div>
                <div class="mb-3 col-md-8">
                    <label for="location" class="form-label">Location: </label>
                    <input name="listing[location]" class="form-control" id="location" placeholder="Enter your location" type="text" required>
                    <div class="invalid-feedback">Please enter a Location</div>
                </div>
            </div>
            <div class="mb-3">
                <label for="country" class="form-label"> Country: </label>
                <input name="listing[country]" class="form-control" id="country" placeholder="Enter your country" type="text" required>
                <div class="invalid-feedback">Please enter a Country</div>
            </div>
            <br>
            <button class="btn btn-success">Add Stay</button>
        </form>
    </div>
    
    <br>
    </div>
</div>
